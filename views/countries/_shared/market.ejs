<%
  const labels = country?.labels || {};
  const dayLabels = {
    today: labels.dayToday || 'Today',
    tomorrow: labels.dayTomorrow || 'Tomorrow',
    yesterday: labels.dayYesterday || 'Yesterday',
  };
%>
<section class="section-card hero-card">
  <div class="hero-meta">
    <span class="eyebrow">Markets for <%= country?.name || 'Africa' %></span>
    <span class="pill-outline">Daily tips</span>
  </div>
  <h1 class="hero-title"><%= market?.title || 'Market Tips' %></h1>
  <p class="hero-subtitle"><%= market?.subtitle || '' %></p>
  <p class="hero-intro"><%= market?.intro || '' %></p>
</section>

<%- include('../../partials/tips/day-sections', { tips, labels: dayLabels, days: ['today', 'tomorrow'] }) %>
